<div class="table-responsive">
  <h4>Table Utilisateurs</h4>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Email</th>
        <th>Description</th>
        <th>Création du compte</th>
        <th>Nb d'événements créés</th>
        <th>Afficher</th>
        <th>Editer</th>
        <th>Supprimer</th>
      </tr>
    </thead>
    <tbody>
      <% @all_users.each_with_index do |user, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.first_name%></td>
        <td><%= user.last_name%></td>
        <td><%= user.email %></td>
        <td><%= user.description %></td>
        <td><%= user.created_at.strftime("%m/%d/%y, %H:%M")%></td>
        <td><%= user.event_creations.count %></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, user_path(user.id) %></td>
        <td><%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_user_path(user.id) %></td>
        <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, user_path(user.id), method: "delete", data: { confirm: "Vous-êtes vraiment sur ?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table></br>

    <h4>Table Evènements</h4>
    <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Créateur</th>
        <th>Lieu</th>
        <th>Date</th>
        <th>Horaire</th>
        <th>Date de fin</th>
        <th>Prix</th>
        <th>Nombre de participants</th>
        <th>Gestion des participations</th>
        <th>Afficher</th>
        <th>Editer</th>
        <th>Supprimer</th>
      </tr>
    </thead>
    <tbody>
      <% @all_events.each_with_index do |event, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= event.title%></td>
        <td><%= event.description%></td>
        <td><%= event.administrator.first_name %></td>
        <td><%= event.location %></td>
        <td><%= event.start_date.strftime("%m/%d/%y")%></td>
        <td><%= event.start_date.strftime("%H:%M")%></td>
        <td><%= event.end_date.strftime("%m/%d/%y") %></td>
        <td><%= event.price %></td>
        <td><%= event.attendances.count %></td>
        <td><%= link_to '<i class="fas fa-hands-helping"></i>'.html_safe, event_path(event.id) %></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, event_path(event.id) %></td>
        <td><%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_event_path(event.id) %></td>
        <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, event_path(event.id), method: "delete", data: { confirm: "Vous-êtes vraiment sur ?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
