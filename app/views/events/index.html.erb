<% if user_signed_in? %>
  <h4>Bienvenue <%= current_user.first_name %></h4>
  <p><%= link_to "Nouveau EVENT", new_event_path, class: "btn-dark btn p-1" %></p>
<% else %>
  <h2>Bienvenue, connecte-toi !!!</h2>
<% end %>
</br>
<% @all_events.each_with_index do |event, i| %>
  <strong>Event <%=i+1 %></strong></br>
  <%= event.title %> </br>
  <%= event.description %> </br>
  <%= event.start_date.strftime("%m/%d/%y") %>
  <%= event.start_date.strftime("%H:%M") %>
  <% hours = event.duration / 60 %>
  <% rest = event.duration % 60 %>
   - Dur√©e : <%= hours %> h <%=rest%></br>
   <%= link_to "En savoir plus...", event_path(event.id), class: "btn-dark btn p-1" %>
   </br></br>
<% end %>